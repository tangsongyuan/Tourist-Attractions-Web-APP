<% include partials/header %>

<h1><%= place.name %></h1>

<img src="<%= place.image %>"></img>

<p><%= place.description %></p>

<% place.comments.forEach(function(comment) { %>
    <p>
        <strong><%= comment.author %></strong> - <%= comment.text %>
    </p>
<% }); %>
<p>
    <a href="/places">Go back</a>
</p>

<% include partials/footer %>