<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <h1>Welcome to Visit Places Spots</h1>
        <p>View Tourist Attractions all around the world!</p>
        <a class="btn btn-primary btn-large" href="/places/new">Add New Place!</a>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% places.forEach(function(place) { %>
            <div class="col-md-4 col-sm-6 thumbnail">
                <img src="<%= place.image %>"></img>
                <div class="caption">
                    <h4><%= place.name %></h4>
                </div>
                <!--<div class="btn btn-primary">-->
                <!--    <button>More Info</button>-->
                <!--</div>-->
                <p>
                    <a href="/places/<%= place._id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>